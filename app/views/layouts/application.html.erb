<!DOCTYPE html>
<html>
<head>
  <title>App</title>
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.js" type="text/javascript"></script>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <span class="brand"><a href="/">Home</a></span>
        <div class="nav-collapse">
	        <ul class="nav pull-right">
	          <li></li>
			 	  <% if current_user %>
					  <li class="dropdown">
					    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-user icon-white"></i> My Account</a>
					    <ul class="dropdown-menu">
					      <li><%= link_to "My Profile", :profile %></li>
					      <li class="divider"></li>
					      <li><%= link_to "Sign Out #{current_user.name}", :signout %></li>
					    </ul>
					  </li>
					<% else %>
				    <li><%= link_to "Sign In", new_user_session_path %></li>
				  <% end %>
					</ul>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
  <% unless flash[:notice].blank? %>
    <div class="alert alert-success"><%= flash[:notice] %></div>
  <% end %>

  <% unless flash[:error].blank? %>
    <div class="alert alert-error"><%= flash[:error] %></div>
  <% end %>

  <% unless flash[:alert].blank? %>
    <div class="alert alert-info"><%= flash[:alert] %></div>
  <% end %>
		
  <%= yield %>
		
    <footer>
      <center>
        <p>&copy; 2013</p>
      </center>
    </footer>
  </div>
</body>
</html>
